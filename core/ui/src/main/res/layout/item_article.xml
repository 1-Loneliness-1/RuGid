<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivArticleCover"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/article_img_bg"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/article_placeholder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvArticleTitle"
        style="@style/Headline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black_font_main"
        tools:text="Отличный отдых для всей семьи - горнолыжные курорты." />

</LinearLayout>