<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <ImageView
            android:id="@+id/ivExcursionCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/excursion_placeholder" />

        <ImageView
            android:id="@+id/ivFavoriteExcursion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end"
            android:scaleType="centerInside"
            android:src="@drawable/bookmark"
            android:background="@drawable/bookmark_bg" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExcursionTitle"
        style="@style/Headline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_font_main"
        tools:text="Экскурсия по городу с посещением Эрмитажа" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExcursionCategory"
            style="@style/Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icons3"
            tools:text="Автобусная" />

        <TextView
            style="@style/Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:textColor="@color/icons3"
            android:text="⋅" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExcursionType"
            style="@style/Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icons3"
            tools:text="Обзорная" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExcursionDuration"
            style="@style/Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/clock"
            android:drawablePadding="4dp"
            android:textColor="@color/icons3"
            tools:text="3-4ч" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExcursionNumOfPeople"
            style="@style/Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:drawableStartCompat="@drawable/people"
            android:drawablePadding="4dp"
            android:textColor="@color/icons3"
            tools:text="До 20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExcursionPrice"
            style="@style/Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_font_main"
            tools:text="от 1700 ₽" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExcursionSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="13dp"
            android:paddingVertical="4dp"
            android:textColor="#09B535"
            android:background="@drawable/sale_bg"
            tools:text="−10%" />

    </LinearLayout>

</LinearLayout>